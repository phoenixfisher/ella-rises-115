<div class="landing">
    <!-- Header Section -->
    <div style="display: flex; justify-content: flex-end; align-items: center; margin-bottom: 2rem; gap: 12px;">
        <% if (user && user.level === 'M') { %>
            <!-- Using a form to leverage the global button styling in styles.css -->
            <form action="/addEvent" method="GET" style="margin: 0;">
                <button type="submit" class="btn btn-green" style="margin-top: 0; width: auto; padding: 10px 24px;">
                    Create New Event
                </button>
            </form>
        <% } %>
    </div>

    <div>
        <div style="display: flex; justify-content: space-between; align-items: center; gap: 12px; margin-bottom: 1rem; flex-wrap: wrap;">
            <h2 style="color: var(--rose-deep); border-bottom: 2px solid var(--pink-light); padding-bottom: 10px; margin: 0;">Upcoming Events</h2>
            <div class="event-tabs">
                <button type="button" class="event-tab-button active" disabled>Upcoming</button>
                <a href="/events/past" class="event-tab-button" style="text-decoration: none; text-align: center;">Past</a>
            </div>
        </div>
        
        <% if (upcomingEvents.length === 0) { %>
            <div style="padding: 20px; background: var(--white); border-radius: 8px; border: 1px solid var(--pink-light);">
                No upcoming events found.
            </div>
        <% } else { %>
            <div class="pillar-grid events-grid">
                <% upcomingEvents.forEach(event => { %>
                    <div class="hero-panel events-card">
                        <div>
                            <!-- Event Type Badge -->
                            <span class="hero-badge" style="background: var(--lavender); margin-bottom: 12px; font-size: 0.85rem;">
                                <%= event.eventtype %>
                            </span>

                            <h3 style="margin-top: 0.5rem; color: var(--charcoal);"><%= event.eventname %></h3>
                            
                            <p style="color: var(--charcoal); line-height: 1.5; font-size: 0.95rem;">
                                <%= event.eventdescription.substring(0, 100) %>...
                            </p>

                            <ul style="list-style: none; padding: 0; margin: 15px 0; color: var(--charcoal); font-size: 0.9rem;">
                                <li style="margin-bottom: 8px;">
                                    <strong style="color: var(--rose-deep);">Start:</strong> 
                                    <%= new Date(event.eventdatetimestart).toLocaleString() %>
                                </li>
                                <li style="margin-bottom: 8px;">
                                    <strong style="color: var(--rose-deep);">Location:</strong> <%= event.eventlocation %>
                                </li>
                                <li style="margin-bottom: 8px;">
                                    <strong style="color: var(--rose-deep);">Recurrence:</strong> <%= event.eventrecurrencepattern %>
                                </li>
                            </ul>
                        </div>

                        <!-- Buttons only visible to Managers -->
                        <% if (user && user.level === 'M') { %>
                            <div class="hero-actions" style="margin-top: auto; display: flex; gap: 10px;">
                                <!-- Edit Button (styled manually to differ from delete) -->
                                <button onclick="location.href='/editEvent/<%= event.eventid %>'" 
                                        style="background-color: var(--blue-soft);color: var(--blue); margin-top: 0; padding: 8px 16px; font-size: 0.9rem;">
                                    Edit
                                </button>
                                
                                <form action="/deleteEvent/<%= event.eventid %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this event?');" style="flex: 1;">
                                    <button type="submit" style="background-color: var(--coral); margin-top: 0; padding: 8px 16px; font-size: 0.9rem;">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        <% } %>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    </div>
</div>
