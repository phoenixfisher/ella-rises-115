<div class="landing">
    <div class="hero-panel" style="max-width: 800px; margin: 0 auto;">
        
        <h2 style="color: var(--charcoal); margin-top: 0; margin-bottom: 2rem; border-bottom: 2px solid var(--pink-light); padding-bottom: 1rem;">
            Add New Participant
        </h2>

        <% if (typeof error_message !== 'undefined' && error_message) { %>
            <div style="background-color: #f8d7da; color: #721c24; padding: 10px; border-radius: 8px; margin-bottom: 20px; border: 1px solid #f5c6cb;">
                <%= error_message %>
            </div>
        <% } %>

        <form action="/addParticipant" method="post">
            
            <!-- Section 1: Basic Identity -->
            <h4 style="color: var(--rose-deep); margin-bottom: 1rem; font-size: 1.1rem;">Personal Details</h4>
            
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem; margin-bottom: 1.5rem;">
                <div>
                    <label for="participantfirstname" style="display: block; margin-bottom: 0.5rem; color: var(--charcoal); font-weight: 500;">First Name</label>
                    <input type="text" id="participantfirstname" name="participantfirstname" required autofocus
                           style="width: 100%; padding: 10px; border: 2px solid var(--pink-light); border-radius: 8px; font-size: 1rem;">
                </div>
                <div>
                    <label for="participantlastname" style="display: block; margin-bottom: 0.5rem; color: var(--charcoal); font-weight: 500;">Last Name</label>
                    <input type="text" id="participantlastname" name="participantlastname" required
                           style="width: 100%; padding: 10px; border: 2px solid var(--pink-light); border-radius: 8px; font-size: 1rem;">
                </div>
            </div>

            <div style="margin-bottom: 2rem;">
                <label for="participantrole" style="display: block; margin-bottom: 0.5rem; color: var(--charcoal); font-weight: 500;">Role</label>
                <input type="text" id="participantrole" name="participantrole" placeholder="e.g. Participant, Mentor, Speaker"
                       style="width: 100%; padding: 10px; border: 2px solid var(--pink-light); border-radius: 8px; font-size: 1rem;">
            </div>

            <!-- Section 2: Contact Info -->
            <h4 style="color: var(--rose-deep); margin-bottom: 1rem; font-size: 1.1rem; border-top: 1px solid #eee; padding-top: 1.5rem;">Contact Information</h4>
            
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem; margin-bottom: 1.5rem;">
                <div>
                    <label for="participantemail" style="display: block; margin-bottom: 0.5rem; color: var(--charcoal); font-weight: 500;">Email</label>
                    <input type="email" id="participantemail" name="participantemail" required
                           style="width: 100%; padding: 10px; border: 2px solid var(--pink-light); border-radius: 8px; font-size: 1rem;">
                </div>
                <div>
                    <label for="participantphone" style="display: block; margin-bottom: 0.5rem; color: var(--charcoal); font-weight: 500;">Phone Number</label>
                    <input type="tel" id="participantphone" name="participantphone" placeholder="(123) 456-7890"
                           style="width: 100%; padding: 10px; border: 2px solid var(--pink-light); border-radius: 8px; font-size: 1rem;">
                </div>
            </div>

            <div style="margin-bottom: 2rem;">
                <label for="participantdob" style="display: block; margin-bottom: 0.5rem; color: var(--charcoal); font-weight: 500;">Date of Birth</label>
                <input type="text" id="participantdob" name="participantdob" placeholder="YYYY-MM-DD"
                    style="width: 100%; padding: 10px; border: 2px solid var(--pink-light); border-radius: 8px; font-size: 1rem;">            
            </div>

            <!-- Section 3: Location & Background -->
            <h4 style="color: var(--rose-deep); margin-bottom: 1rem; font-size: 1.1rem; border-top: 1px solid #eee; padding-top: 1.5rem;">Location & Background</h4>

            <div style="display: grid; grid-template-columns: 2fr 1fr 1fr; gap: 1rem; margin-bottom: 1.5rem;">
                <div>
                    <label for="participantcity" style="display: block; margin-bottom: 0.5rem; color: var(--charcoal); font-weight: 500;">City</label>
                    <input type="text" id="participantcity" name="participantcity"
                           style="width: 100%; padding: 10px; border: 2px solid var(--pink-light); border-radius: 8px; font-size: 1rem;">
                </div>
                <div>
                    <label for="participantstate" style="display: block; margin-bottom: 0.5rem; color: var(--charcoal); font-weight: 500;">State</label>
                    <input type="text" id="participantstate" name="participantstate" maxlength="2" placeholder="e.g. UT"
                           style="width: 100%; padding: 10px; border: 2px solid var(--pink-light); border-radius: 8px; font-size: 1rem;">
                </div>
                <div>
                    <label for="participantzip" style="display: block; margin-bottom: 0.5rem; color: var(--charcoal); font-weight: 500;">Zip</label>
                    <input type="text" id="participantzip" name="participantzip"
                           style="width: 100%; padding: 10px; border: 2px solid var(--pink-light); border-radius: 8px; font-size: 1rem;">
                </div>
            </div>

            <div style="margin-bottom: 1.5rem;">
                <label for="participantschooloremployer" style="display: block; margin-bottom: 0.5rem; color: var(--charcoal); font-weight: 500;">School or Employer</label>
                <input type="text" id="participantschooloremployer" name="participantschooloremployer"
                       style="width: 100%; padding: 10px; border: 2px solid var(--pink-light); border-radius: 8px; font-size: 1rem;">
            </div>

            <div style="margin-bottom: 2.5rem;">
                <label for="participantfieldofinterest" style="display: block; margin-bottom: 0.5rem; color: var(--charcoal); font-weight: 500;">Field of Interest</label>
                <input type="text" id="participantfieldofinterest" name="participantfieldofinterest" placeholder="e.g. Graphic Design, STEM, Art"
                       style="width: 100%; padding: 10px; border: 2px solid var(--pink-light); border-radius: 8px; font-size: 1rem;">
            </div>

            <!-- Buttons -->
            <div style="display: flex; gap: 15px; border-top: 2px solid var(--pink-light); padding-top: 1.5rem;">
                <a href="/participants" style="flex: 1; text-align: center;">
                    <button type="button" style="width: 100%; padding: 12px; background: #ccc; color: var(--charcoal); border: none; border-radius: 8px; font-size: 1rem; cursor: pointer; font-weight: bold;">
                        Cancel
                    </button>
                </a>
                <div style="flex: 1;">
                    <button type="submit" style="width: 100%; padding: 12px; background: var(--rose-deep); color: white; border: none; border-radius: 8px; font-size: 1rem; cursor: pointer; font-weight: bold;">
                        Add Participant
                    </button>
                </div>
            </div>

        </form>
    </div>
</div>