<div class="landing">
    <div class="hero-panel" style="max-width: 800px; margin: 0 auto;">
        
        <h2 style="color: var(--charcoal); margin-top: 0; margin-bottom: 2rem; border-bottom: 2px solid var(--pink-light); padding-bottom: 1rem;">
            Edit Participant
        </h2>

        <% if (typeof error_message !== 'undefined' && error_message) { %>
            <div style="background-color: #f8d7da; color: #721c24; padding: 10px; border-radius: 8px; margin-bottom: 20px; border: 1px solid #f5c6cb;">
                <%= error_message %>
            </div>
        <% } %>

        <form action="/editParticipant/<%= participant.participantid %>" method="post">
            <h4 style="color: var(--rose-deep); margin: 0; font-size: 1.1rem;">Personal Details</h4>
            <div class="form-row">
                <div class="form-field">
                    <label for="participantfirstname">First Name</label>
                    <input type="text" id="participantfirstname" name="participantfirstname" class="form-control" value="<%= participant.participantfirstname %>" required>
                </div>
                <div class="form-field">
                    <label for="participantlastname">Last Name</label>
                    <input type="text" id="participantlastname" name="participantlastname" class="form-control" value="<%= participant.participantlastname %>" required>
                </div>
            </div>
            <div class="form-field">
                <label for="participantrole">Role</label>
                <input type="text" id="participantrole" name="participantrole" class="form-control" value="<%= participant.participantrole %>" placeholder="e.g. Participant, Mentor, Speaker">
            </div>

            <h4 style="color: var(--rose-deep); margin: 0; font-size: 1.1rem;">Contact Information</h4>
            <div class="form-row">
                <div class="form-field">
                    <label for="participantemail">Email</label>
                    <input type="email" id="participantemail" name="participantemail" class="form-control" value="<%= participant.participantemail %>" required>
                </div>
                <div class="form-field">
                    <label for="participantphone">Phone Number</label>
                    <input type="tel" id="participantphone" name="participantphone" class="form-control" value="<%= participant.participantphone %>">
                </div>
            </div>
            <div class="form-field">
                <label for="participantdob">Date of Birth</label>
                <input type="text" id="participantdob" name="participantdob" class="form-control" placeholder="YYYY-MM-DD">
            </div>

            <h4 style="color: var(--rose-deep); margin: 0; font-size: 1.1rem;">Location & Background</h4>
            <div class="form-row">
                <div class="form-field">
                    <label for="participantcity">City</label>
                    <input type="text" id="participantcity" name="participantcity" class="form-control" value="<%= participant.participantcity %>">
                </div>
                <div class="form-field">
                    <label for="participantstate">State</label>
                    <input type="text" id="participantstate" name="participantstate" class="form-control" value="<%= participant.participantstate %>" maxlength="2">
                </div>
                <div class="form-field">
                    <label for="participantzip">Zip</label>
                    <input type="text" id="participantzip" name="participantzip" class="form-control" value="<%= participant.participantzip %>">
                </div>
            </div>
            <div class="form-field">
                <label for="participantschooloremployer">School or Employer</label>
                <input type="text" id="participantschooloremployer" name="participantschooloremployer" class="form-control" value="<%= participant.participantschooloremployer %>">
            </div>
            <div class="form-field">
                <label for="participantfieldofinterest">Field of Interest</label>
                <input type="text" id="participantfieldofinterest" name="participantfieldofinterest" class="form-control" value="<%= participant.participantfieldofinterest %>">
            </div>

            <div class="form-actions" style="border-top: 2px solid var(--pink-light); padding-top: 1rem;">
                <a href="/participants" style="flex: 1; text-align: center;">
                    <button type="button" style="width: 100%; background: #ccc; color: var(--charcoal); border: none; border-radius: 8px; font-size: 1rem; cursor: pointer; font-weight: bold;">
                        Cancel
                    </button>
                </a>
                <button type="submit" style="flex: 1; width: 100%; background: var(--rose-deep); color: white; border: none; border-radius: 8px; font-size: 1rem; cursor: pointer; font-weight: bold;">
                    Save Changes
                </button>
            </div>

        </form>
    </div>

    <!-- Script to handle Date formatting -->
    <script>
        // Check if a DOB value exists from the server
        const rawDate = "<%= participant.participantdob %>";
        
        if (rawDate) {
            const dateObj = new Date(rawDate);
            // Format to YYYY-MM-DD which is required for input type="date"
            if (!isNaN(dateObj.getTime())) {
                const year = dateObj.getFullYear();
                const month = String(dateObj.getMonth() + 1).padStart(2, '0');
                const day = String(dateObj.getDate()).padStart(2, '0');
                document.getElementById('participantdob').value = `${year}-${month}-${day}`;
            }
        }
    </script>
</div>
