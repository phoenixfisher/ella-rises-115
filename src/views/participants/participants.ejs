<div class="landing">
    <div class="hero-panel" style="max-width: 1000px; margin: 0 auto;">
        
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
            <h2 style="color: var(--charcoal); margin: 0;">Participants List</h2>
            
            <% if (userLevel === 'M') { %>
                <a href="/addParticipant" style="text-decoration: none; background: var(--rose-deep); color: white; padding: 8px 16px; border-radius: 8px; font-weight: bold; display: inline-block;">
                    Add Participant
                </a>
            <% } %>
        </div>

        <form action="/participants" method="GET" style="margin-bottom: 2rem; display: flex; flex-wrap: wrap; gap: 10px; align-items: center;">
            
            <input 
                type="text" 
                name="search" 
                placeholder="Search..." 
                value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>"
                style="flex: 2; min-width: 200px; padding: 10px; border: 2px solid var(--pink-light); border-radius: 8px; font-size: 1rem;"
            >

            <select name="sortBy" style="flex: 1; min-width: 140px; padding: 10px; border: 2px solid var(--pink-light); border-radius: 8px; background-color: white; font-family: 'Montserrat', sans-serif;">
                <option value="lastname" <%= typeof sortBy !== 'undefined' && sortBy === 'lastname' ? 'selected' : '' %>>Last Name</option>
                <option value="firstname" <%= typeof sortBy !== 'undefined' && sortBy === 'firstname' ? 'selected' : '' %>>First Name</option>
                <option value="email" <%= typeof sortBy !== 'undefined' && sortBy === 'email' ? 'selected' : '' %>>Email</option>
            </select>

            <select name="sortOrder" style="flex: 1; min-width: 100px; padding: 10px; border: 2px solid var(--pink-light); border-radius: 8px; background-color: white; font-family: 'Montserrat', sans-serif;">
                <option value="asc" <%= typeof sortOrder !== 'undefined' && sortOrder === 'asc' ? 'selected' : '' %>>A - Z</option>
                <option value="desc" <%= typeof sortOrder !== 'undefined' && sortOrder === 'desc' ? 'selected' : '' %>>Z - A</option>
            </select>

            <button type="submit" class="btn" style="width: auto; background-color: var(--lavender); color: white; margin-top: 0; border: none;">
                Go
            </button>
            
            <% if ((typeof searchTerm !== 'undefined' && searchTerm) || (typeof sortBy !== 'undefined' && sortBy !== 'lastname') || (typeof sortOrder !== 'undefined' && sortOrder !== 'asc')) { %>
                <a href="/participants" style="text-decoration: none;">
                    <button type="button" class="btn btn-charcoal" style="width: auto; margin-top: 0;">
                        Reset
                    </button>
                </a>
            <% } %>
        </form>

        <div style="display: flex; justify-content: space-between; align-items: center; gap: 12px; margin-bottom: 1rem; flex-wrap: wrap;">
            <% const prevPageTop = Math.max((typeof page !== 'undefined' ? page : 1) - 1, 1); %>
            <% const nextPageTop = Math.min((typeof page !== 'undefined' ? page : 1) + 1, (typeof totalPages !== 'undefined' ? totalPages : 1)); %>

            <div>
                <a href="/participants?<%= searchTerm ? 'search=' + encodeURIComponent(searchTerm) + '&' : '' %>page=<%= prevPageTop %>" style="text-decoration: none;">
                    <button type="button" class="btn btn-soft btn-sm" style="margin: 0;" <%= (page <= 1) ? 'disabled' : '' %>>← Prev</button>
                </a>
            </div>

            <span style="font-weight: 600; color: var(--charcoal); font-size: 0.95rem;">
                Page <%= page || 1 %> of <%= totalPages || 1 %>
            </span>

            <div>
                <a href="/participants?<%= searchTerm ? 'search=' + encodeURIComponent(searchTerm) + '&' : '' %>page=<%= nextPageTop %>" style="text-decoration: none;">
                    <button type="button" class="btn btn-soft btn-sm" style="margin: 0;" <%= (page >= totalPages) ? 'disabled' : '' %>>Next →</button>
                </a>
            </div>
        </div>

        <% if (typeof error_message !== 'undefined' && error_message) { %>
            <div style="background-color: #f8d7da; color: #721c24; padding: 10px; border-radius: 8px; margin-bottom: 20px; border: 1px solid #f5c6cb;">
                <%= error_message %>
            </div>
        <% } %>

        <% if (participants.length === 0) { %>
            <div style="background-color: #fff3cd; color: #856404; padding: 15px; border-radius: 8px; border: 1px solid #ffeeba;">
                No participants found in the database.
            </div>
        <% } else { %>
            <div style="overflow-x: auto;">
                <table class="styled-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>

                            <% if (user && user.level === 'M') { %>
                                <th style="text-align: center;">Actions</th>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% participants.forEach(p => { %>
                            <tr>
                                <td style="font-weight: 600; color: var(--charcoal);">
                                    <%= p.participantfullname %>
                                </td>
                                <td style="color: #666; font-family: monospace;">
                                    <%= p.participantemail %>
                                </td>
                                <td style="color: #666; font-family: monospace;">
                                    <%= p.participantphone %>
                                </td>
                                <td style="white-space: nowrap; text-align: right;">
                                    <div style="display: inline-flex; gap: 6px; align-items: center; justify-content: flex-end;">
                                        <a href="/displayParticipant/<%= p.participantid %>" class="btn btn-soft btn-sm">
                                            Details
                                        </a>
                                        
                                        <a href="/editParticipant/<%= p.participantid %>" class="btn btn-soft btn-sm">
                                            Edit
                                        </a>

                                        <form action="/deleteParticipant/<%= p.participantid %>" method="post" onsubmit="return confirm('Are you sure you want to delete <%= p.participantfullname %>?');" style="display: inline; margin: 0;">
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>

        <div style="display: flex; justify-content: space-between; align-items: center; gap: 12px; margin-top: 1.5rem; flex-wrap: wrap;">
            <% const prevPage = Math.max((typeof page !== 'undefined' ? page : 1) - 1, 1); %>
            <% const nextPage = Math.min((typeof page !== 'undefined' ? page : 1) + 1, (typeof totalPages !== 'undefined' ? totalPages : 1)); %>
            <div>
                <a href="/participants?<%= searchTerm ? 'search=' + encodeURIComponent(searchTerm) + '&' : '' %>page=<%= prevPage %>" style="text-decoration: none;">
                    <button type="button" class="btn btn-soft btn-sm" style="margin: 0;" <%= (page <= 1) ? 'disabled' : '' %>>← Prev</button>
                </a>
            </div>
            <span style="font-weight: 600; color: var(--charcoal); font-size: 0.95rem;">
                Page <%= page || 1 %> of <%= totalPages || 1 %>
            </span>
            <div>
                <a href="/participants?<%= searchTerm ? 'search=' + encodeURIComponent(searchTerm) + '&' : '' %>page=<%= nextPage %>" style="text-decoration: none;">
                    <button type="button" class="btn btn-soft btn-sm" style="margin: 0;" <%= (page >= totalPages) ? 'disabled' : '' %>>Next →</button>
                </a>
            </div>
        </div>

        <div style="display: flex; justify-content: space-between; align-items: center; gap: 12px; font-size: 0.9rem; color: #666; margin-top: 0.25rem; flex-wrap: wrap;">
            <span>Showing up to 50 per page</span>
            <span>Total results: <%= typeof total !== 'undefined' ? total : '' %></span>
        </div>

        <div style="margin-top: 1rem; border-top: 2px solid var(--pink-light); padding-top: 12px;">
            <a href="/" style="text-decoration: none;">
                <button type="button" style="background-color: #6c757d; color: white; padding: 10px 18px; border: none; border-radius: 8px; cursor: pointer; font-weight: bold;">
                    Back to Home
                </button>
            </a>
        </div>
    </div>
</div>
