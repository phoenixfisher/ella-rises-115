<div class="form-card">
    <h2 class="text-center mb-4">Edit User</h2>

    <% if (typeof error_message !== 'undefined' && error_message) { %>
        <div class="alert alert-danger" role="alert">
            <%= error_message %>
        </div>
    <% } %>
        <!-- The user object is passed from the server containing user details -->
    <form action="/editUser/<%= user.id %>" method="post">
        
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" id="username" name="username" value="<%= user.username %>" required>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="text" class="form-control" id="password" name="password" value="<%= user.password %>" required>
        </div>

        <div class="mb-4">
            <label class="form-label d-block">Access Level:</label>
            
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="level" id="user" value="U" <%= user.level === 'U' ? 'checked' : '' %>>
                <label class="form-check-label" for="user">User</label>
            </div>

            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="level" id="manager" value="M" <%= user.level === 'M' ? 'checked' : '' %>>
                <label class="form-check-label" for="manager">Manager</label>
            </div>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary btn-lg">Update User</button>
            <a href="/users" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>