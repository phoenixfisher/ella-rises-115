<div class="landing">
    <div class="hero-panel" style="max-width: 1100px; margin: 0 auto;">
        
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
            <h2 style="color: var(--charcoal); margin: 0;">Survey Responses</h2>
            
            <form action="/addSurvey" method="GET" style="margin: 0;">
                <button type="submit" style="background-color: var(--rose-deep); color: white; padding: 10px 20px; border: none; border-radius: 8px; cursor: pointer; font-weight: bold;">
                    <%= userLevel === 'M' ? 'Add Survey Entry' : 'Leave a Review' %>
                </button>
            </form>
        </div>

        <form action="/surveys" method="GET" style="background-color: #fff; padding: 20px; border-radius: 14px; border: 1px solid var(--pink-light); margin-bottom: 2rem; box-shadow: 0 6px 18px rgba(0,0,0,0.05);">
            <input type="hidden" name="page" value="1">
            <div style="display: flex; align-items: center; justify-content: space-between; gap: 12px; flex-wrap: wrap; margin-bottom: 16px;">
                <div>
                    <h4 style="margin: 0; color: var(--rose-deep); font-size: 1.1rem;">Filter Responses</h4>
                    <p style="margin: 4px 0 0; color: #666; font-size: 0.9rem;">Narrow by date, event, score, or NPS bucket.</p>
                </div>
                <div style="display: flex; gap: 10px; align-items: center;">
                    <button type="submit" style="padding: 10px 16px; background-color: var(--lavender); color: white; border: none; border-radius: 8px; font-weight: 700; cursor: pointer;">
                        Apply
                    </button>
                    <% if (filters.date || filters.event || filters.score || filters.nps) { %>
                        <a href="/surveys" style="text-decoration: none;">
                            <button type="button" style="padding: 10px 14px; background-color: #f4f4f6; color: var(--charcoal); border: 1px solid #e0e0e5; border-radius: 8px; font-weight: 600; cursor: pointer;">
                                Clear
                            </button>
                        </a>
                    <% } %>
                </div>
            </div>

            <div style="display: flex; flex-wrap: wrap; gap: 12px; margin-bottom: 12px;">
                <div style="flex: 1; min-width: 260px;">
                    <label style="display: block; font-size: 0.9rem; font-weight: 600; color: var(--charcoal); margin-bottom: 6px;">Search</label>
                    <input type="text" name="search" value="<%= filters.search || '' %>"
                           placeholder="Participant, event, NPS, comments..."
                           style="width: 100%; padding: 10px 12px; border: 1px solid #dcdde3; border-radius: 8px; box-sizing: border-box; background: #fafbff;">
                </div>
            </div>

            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 16px; align-items: end;">
                <div>
                    <label style="display: block; font-size: 0.9rem; font-weight: 600; color: var(--charcoal); margin-bottom: 6px;">Date</label>
                    <input type="date" name="date" value="<%= filters.date || '' %>" 
                           style="width: 100%; padding: 10px 12px; border: 1px solid #dcdde3; border-radius: 8px; box-sizing: border-box; background: #fafbff;">
                </div>

                    <div>
                        <label style="display: block; font-size: 0.9rem; font-weight: 600; color: var(--charcoal); margin-bottom: 6px;">Event</label>
                        <select name="event" style="width: 100%; padding: 10px 12px; border: 1px solid #dcdde3; border-radius: 8px; box-sizing: border-box; background-color: #fafbff;">
                            <option value="">All Events</option>
                            <% eventsList.forEach(e => { %>
                                <option value="<%= e.eventid %>" <%= filters.event == e.eventid ? 'selected' : '' %>>
                                    <%= e.eventname %>
                                </option>
                            <% }) %>
                        </select>
                    </div>

                <div>
                    <label style="display: block; font-size: 0.9rem; font-weight: 600; color: var(--charcoal); margin-bottom: 6px;">Min Score</label>
                    <select name="score" style="width: 100%; padding: 10px 12px; border: 1px solid #dcdde3; border-radius: 8px; box-sizing: border-box; background-color: #fafbff;">
                        <option value="">Any Score</option>
                        <option value="5" <%= filters.score == '5' ? 'selected' : '' %>>5.0 Only</option>
                        <option value="4" <%= filters.score == '4' ? 'selected' : '' %>>4.0+</option>
                        <option value="3" <%= filters.score == '3' ? 'selected' : '' %>>3.0+</option>
                        <option value="2" <%= filters.score == '2' ? 'selected' : '' %>>2.0+</option>
                    </select>
                </div>

                <div>
                    <label style="display: block; font-size: 0.9rem; font-weight: 600; color: var(--charcoal); margin-bottom: 6px;">NPS Bucket</label>
                    <select name="nps" style="width: 100%; padding: 10px 12px; border: 1px solid #dcdde3; border-radius: 8px; box-sizing: border-box; background-color: #fafbff;">
                        <option value="">All Buckets</option>
                        <option value="Promoter" <%= filters.nps == 'Promoter' ? 'selected' : '' %>>Promoter</option>
                        <option value="Passive" <%= filters.nps == 'Passive' ? 'selected' : '' %>>Passive</option>
                        <option value="Detractor" <%= filters.nps == 'Detractor' ? 'selected' : '' %>>Detractor</option>
                    </select>
                </div>
            </div>
        </form>

        <div style="display: flex; justify-content: space-between; align-items: center; gap: 12px; margin-bottom: 1rem; flex-wrap: wrap;">
            <% const prevPageTop = Math.max((typeof page !== 'undefined' ? page : 1) - 1, 1); %>
            <% const nextPageTop = Math.min((typeof page !== 'undefined' ? page : 1) + 1, (typeof totalPages !== 'undefined' ? totalPages : 1)); %>

            <div>
                <a href="/surveys?<%
                    const pTop1 = new URLSearchParams();
                    if (filters.search) pTop1.append('search', filters.search);
                    if (filters.date) pTop1.append('date', filters.date);
                    if (filters.event) pTop1.append('event', filters.event);
                    if (filters.score) pTop1.append('score', filters.score);
                    if (filters.nps) pTop1.append('nps', filters.nps);
                    pTop1.append('page', prevPageTop);
                    %><%= pTop1.toString() %>" style="text-decoration: none;">
                    <button type="button" class="btn btn-soft btn-sm" style="margin: 0;" <%= (page <= 1) ? 'disabled' : '' %>>← Prev</button>
                </a>
            </div>

            <span style="font-weight: 600; color: var(--charcoal); font-size: 0.95rem;">
                Page <%= page || 1 %> of <%= totalPages || 1 %>
            </span>

            <div>
                <a href="/surveys?<%
                    const pTop2 = new URLSearchParams();
                    if (filters.search) pTop2.append('search', filters.search);
                    if (filters.date) pTop2.append('date', filters.date);
                    if (filters.event) pTop2.append('event', filters.event);
                    if (filters.score) pTop2.append('score', filters.score);
                    if (filters.nps) pTop2.append('nps', filters.nps);
                    pTop2.append('page', nextPageTop);
                    %><%= pTop2.toString() %>" style="text-decoration: none;">
                    <button type="button" class="btn btn-soft btn-sm" style="margin: 0;" <%= (page >= totalPages) ? 'disabled' : '' %>>Next →</button>
                </a>
            </div>
        </div>

        <% if (surveys.length === 0) { %>
            <div style="background-color: #fff3cd; color: #856404; padding: 15px; border-radius: 8px; border: 1px solid #ffeeba;">
                No survey responses found.
            </div>
        <% } else { %>
            <div style="overflow-x: auto;">
                <table class="styled-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Event</th>
                            <th>Participant</th>
                            <th>Overall</th>
                            <th>NPS</th>

                            <% if (user && user.level === 'M') { %>
                                <th style="text-align: center;" colspan="2">Actions</th>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% surveys.forEach(survey => { %>
                            <% 
                                const score = Number(survey.surveyoverallscore).toFixed(1);
                                
                                // Logic for Score Color
                                let scoreColor = '#dc3545'; // Default Red
                                if (survey.surveyoverallscore >= 4) { 
                                    scoreColor = '#28a745'; // Green
                                } else if (survey.surveyoverallscore >= 3) { 
                                    scoreColor = '#ffc107'; // Yellow
                                } else if (!survey.surveyoverallscore) {
                                    scoreColor = '#6c757d'; // Gray if null
                                }
                                
                                // Logic for Badge Color
                                let badgeColor = '#6c757d'; // Default Gray
                                if (survey.surveynpsbucket === 'Promoter') {
                                    badgeColor = '#28a745'; // Green
                                } else if (survey.surveynpsbucket === 'Passive') {
                                    badgeColor = '#ffc107'; // Yellow
                                } else if (survey.surveynpsbucket === 'Detractor') {
                                    badgeColor = '#dc3545'; // Red
                                }
                            %>

                            <tr>
                                <td>
                                    <%= new Date(survey.eventdatetimestart).toLocaleDateString() %>
                                </td>
                                <td style="font-weight: 600; color: var(--charcoal);">
                                    <%= survey.eventname %>
                                </td>
                                <td>
                                    <%= survey.participantfirstname %> <%= survey.participantlastname %>
                                </td>
                                <td>
                                    <span style="font-weight: bold; color: <%= scoreColor %>; white-space: nowrap;">
                                        <%= survey.surveyoverallscore ? score + ' / 5.0' : 'N/A' %>
                                    </span>
                                </td>
                                <td>
                                    <span style="background-color: <%= badgeColor %>; color: white; padding: 4px 8px; border-radius: 12px; font-size: 0.8rem;">
                                        <%= survey.surveynpsbucket || 'N/A' %>
                                    </span>
                                </td>
                                
                                <% if (userLevel === 'M') { %>
                                    <td>
                                        <div style="display: flex; gap: 10px; align-items: center; flex-wrap: nowrap; white-space: nowrap;">
                                            <a href="/editSurvey/<%= survey.surveyid %>" style="display: inline-flex; flex: 0 0 auto;">
                                                <button style="margin: 0; padding: 5px 10px; background-color: var(--blue-soft); font-size: 0.85rem; white-space: nowrap;">Edit</button>
                                            </a>
                                            <form action="/deleteSurvey/<%= survey.surveyid %>" method="POST" onsubmit="return confirm('Delete this survey?');" style="margin: 0; display: inline-flex; flex: 0 0 auto;">
                                                <button type="submit" style="margin: 0; padding: 5px 10px; background-color: #dc3545; font-size: 0.85rem; white-space: nowrap;">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                <% } %>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <div style="display: flex; justify-content: space-between; align-items: center; gap: 12px; margin-top: 1rem; flex-wrap: wrap;">
                <% const prevPage = Math.max((typeof page !== 'undefined' ? page : 1) - 1, 1); %>
                <% const nextPage = Math.min((typeof page !== 'undefined' ? page : 1) + 1, (typeof totalPages !== 'undefined' ? totalPages : 1)); %>
                <div>
                    <a href="/surveys?<%
                        const params = new URLSearchParams();
                        if (filters.search) params.append('search', filters.search);
                        if (filters.date) params.append('date', filters.date);
                        if (filters.event) params.append('event', filters.event);
                        if (filters.score) params.append('score', filters.score);
                        if (filters.nps) params.append('nps', filters.nps);
                        params.append('page', prevPage);
                        %><%= params.toString() %>" style="text-decoration: none;">
                        <button type="button" class="btn btn-soft btn-sm" style="margin: 0;" <%= (page <= 1) ? 'disabled' : '' %>>← Prev</button>
                    </a>
                </div>
                <span style="font-weight: 600; color: var(--charcoal); font-size: 0.95rem;">
                    Page <%= page || 1 %> of <%= totalPages || 1 %>
                </span>
                <div>
                    <a href="/surveys?<%
                        const params2 = new URLSearchParams();
                        if (filters.search) params2.append('search', filters.search);
                        if (filters.date) params2.append('date', filters.date);
                        if (filters.event) params2.append('event', filters.event);
                        if (filters.score) params2.append('score', filters.score);
                        if (filters.nps) params2.append('nps', filters.nps);
                        params2.append('page', nextPage);
                        %><%= params2.toString() %>" style="text-decoration: none;">
                        <button type="button" class="btn btn-soft btn-sm" style="margin: 0;" <%= (page >= totalPages) ? 'disabled' : '' %>>Next →</button>
                    </a>
                </div>
            </div>

            <div style="display: flex; justify-content: space-between; align-items: center; gap: 12px; font-size: 0.9rem; color: #666; margin-top: 0.25rem; flex-wrap: wrap;">
                <span>Showing up to 50 per page</span>
                <span>Total results: <%= typeof total !== 'undefined' ? total : '' %></span>
            </div>
        <% } %>

        <div style="margin-top: 1rem; border-top: 2px solid var(--pink-light); padding-top: 1rem;">
            <a href="/" style="text-decoration: none;">
                <button type="button" style="background-color: #6c757d; color: white; padding: 10px 20px; border: none; border-radius: 8px; cursor: pointer;">Back to Home</button>
            </a>
        </div>
    </div>
</div>
