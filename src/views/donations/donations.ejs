<div class="landing">
    <div class="hero-panel" style="max-width: 900px; margin: 0 auto;">

        <!-- Header Section -->
        <div style="border-bottom: 2px; padding-bottom: 1rem; margin-bottom: 2rem; display: flex; justify-content: space-between; align-items: center;">
            <h2 style="color: var(--charcoal); margin: 0;">Donations</h2>

            <% if (user && user.level === 'M') { %>
                <a href="/addDonation" style="text-decoration: none; background: var(--rose-deep); color: white; padding: 8px 16px; border-radius: 8px; font-weight: bold;">
                    + Add Donation
                </a>
            <% } %>
        </div>

        <form action="/donations" method="GET" style="margin-bottom: 1.5rem; display: flex; gap: 10px; flex-wrap: wrap;">
            <input 
                type="text" 
                name="search" 
                placeholder="Search donor or amount..." 
                value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>"
                style="flex: 1; min-width: 240px; padding: 10px; border: 2px solid var(--pink-light); border-radius: 8px; font-size: 1rem;"
            >
            <input type="hidden" name="page" value="1">
            <button type="submit" class="btn" style="width: auto; background-color: var(--lavender); color: white; margin-top: 0;">
                Search
            </button>
            
            <% if (searchTerm) { %>
                <a href="/donations" style="text-decoration: none;">
                    <button type="button" class="btn btn-charcoal" style="width: auto; margin-top: 0;">
                        Clear
                    </button>
                </a>
            <% } %>
        </form>

        <div style="display: flex; justify-content: space-between; align-items: center; gap: 12px; margin-bottom: 1rem; flex-wrap: wrap;">
            <% const prevPageTop = Math.max((typeof page !== 'undefined' ? page : 1) - 1, 1); %>
            <% const nextPageTop = Math.min((typeof page !== 'undefined' ? page : 1) + 1, (typeof totalPages !== 'undefined' ? totalPages : 1)); %>

            <div>
                <a href="/donations?<%= searchTerm ? 'search=' + encodeURIComponent(searchTerm) + '&' : '' %>page=<%= prevPageTop %>" style="text-decoration: none;">
                    <button type="button" class="btn btn-soft btn-sm" style="margin: 0;" <%= (page <= 1) ? 'disabled' : '' %>>← Prev</button>
                </a>
            </div>

            <span style="font-weight: 600; color: var(--charcoal); font-size: 0.95rem;">
                Page <%= page || 1 %> of <%= totalPages || 1 %>
            </span>

            <div>
                <a href="/donations?<%= searchTerm ? 'search=' + encodeURIComponent(searchTerm) + '&' : '' %>page=<%= nextPageTop %>" style="text-decoration: none;">
                    <button type="button" class="btn btn-soft btn-sm" style="margin: 0;" <%= (page >= totalPages) ? 'disabled' : '' %>>Next →</button>
                </a>
            </div>
        </div>

        <!-- Donations Table -->
        <div style="margin-bottom: 2rem;">
            <% if (!donations || donations.length === 0) { %>
                <div style="background-color: #fff3cd; color: #856404; padding: 15px; border-radius: 8px; border: 1px solid #ffeeba;">
                    No donations recorded.
                </div>
            <% } else { %>
                <div style="overflow-x: auto;">
                    <table class="styled-table" style="min-width: 600px;">
                        <thead>
                            <tr>
                                <th>Donor</th>
                                <th>Donation Date</th>
                                <th>Amount</th>

                                <% if (user && user.level === 'M') { %>
                                    <th style="text-align: center;" colspan="2">Actions</th>
                                <% } %>
                            </tr>
                        </thead>

                        <tbody>
                            <% donations.forEach(d => { %>
                                <tr>
                                    <td style="color: var(--charcoal); font-weight: 600;">
                                        <%= d.participantfirstname %> <%= d.participantlastname %>
                                    </td>

                                    <td style="color: #666; font-family: monospace;">
                                        <% if (d.donationdate) { %>
                                            <%= new Date(d.donationdate).toLocaleDateString() %>
                                        <% } else { %>
                                            N/A
                                        <% } %>
                                    </td>

                                    <td style="font-weight: bold; color: var(--rose-deep);">
                                        $<%= d.donationamount %>
                                    </td>

                                    <% if (user && user.level === 'M') { %>
                                        <td style="text-align: right;">
                                            <a href="/editDonation/<%= d.donationid %>" class="btn btn-soft btn-sm" style="background-color: var(--coral); color: white; border: none;">
                                                Edit
                                            </a>
                                        </td>

                                        <td style="text-align: right;">
                                            <a href="/deleteDonation/<%= d.donationid %>" onclick="return confirm('Are you sure you want to delete this donation?');" class="btn btn-soft btn-sm" style="background-color: var(--rose-deep); color: white; border: none;">
                                                Delete
                                            </a>
                                        </td>
                                    <% } %>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>

        <!-- Pagination & Back -->
        <div style="margin-top: 1rem; padding-top: 0; display: flex; gap: 1rem; justify-content: space-between; align-items: center; flex-wrap: wrap;">
            <% const prevPage = Math.max((typeof page !== 'undefined' ? page : 1) - 1, 1); %>
            <% const nextPage = Math.min((typeof page !== 'undefined' ? page : 1) + 1, (typeof totalPages !== 'undefined' ? totalPages : 1)); %>
            <div>
                <a href="/donations?<%= searchTerm ? 'search=' + encodeURIComponent(searchTerm) + '&' : '' %>page=<%= prevPage %>" style="text-decoration: none;">
                    <button type="button" class="btn btn-soft btn-sm" style="margin: 0;" <%= (page <= 1) ? 'disabled' : '' %>>← Prev</button>
                </a>
            </div>
            <span style="font-weight: 600; color: var(--charcoal); font-size: 0.95rem;">
                Page <%= page || 1 %> of <%= totalPages || 1 %>
            </span>
            <div>
                <a href="/donations?<%= searchTerm ? 'search=' + encodeURIComponent(searchTerm) + '&' : '' %>page=<%= nextPage %>" style="text-decoration: none;">
                    <button type="button" class="btn btn-soft btn-sm" style="margin: 0;" <%= (page >= totalPages) ? 'disabled' : '' %>>Next →</button>
                </a>
            </div>
        </div>

        <div style="display: flex; justify-content: space-between; align-items: center; gap: 12px; font-size: 0.9rem; color: #666; margin-top: 0.25rem; flex-wrap: wrap;">
            <span>Showing up to 50 per page</span>
            <span>Total results: <%= typeof total !== 'undefined' ? total : '' %></span>
        </div>

        <div style="margin-top: 1rem; border-top: 2px solid var(--pink-light); padding-top: 12px;">
            <a href="/" style="text-decoration: none;">
                <button type="button" style="background-color: #6c757d; color: white; padding: 10px 18px; border: none; border-radius: 8px; cursor: pointer; font-weight: bold;">
                    Back to Home
                </button>
            </a>
        </div>

    </div>
</div>
