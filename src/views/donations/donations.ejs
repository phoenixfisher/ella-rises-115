<div class="landing">
    <div class="hero-panel" style="max-width: 900px; margin: 0 auto;">

        <!-- Header Section -->
        <div style="border-bottom: 2px; padding-bottom: 1rem; margin-bottom: 2rem; display: flex; justify-content: space-between; align-items: center;">
            <h2 style="color: var(--charcoal); margin: 0;">Donations</h2>

            <% if (user && user.level === 'M') { %>
                <a href="/addDonation" style="text-decoration: none; background: var(--rose-deep); color: white; padding: 8px 16px; border-radius: 8px; font-weight: bold;">
                    + Add Donation
                </a>
            <% } %>
        </div>

        <form action="/donations" method="GET" style="margin-bottom: 1.5rem; display: flex; gap: 10px; flex-wrap: wrap;">
            <input 
                type="text" 
                name="search" 
                placeholder="Search donor or amount..." 
                value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>"
                style="flex: 1; min-width: 240px; padding: 10px; border: 2px solid var(--pink-light); border-radius: 8px; font-size: 1rem;"
            >
            <button type="submit" class="btn" style="width: auto; background-color: var(--lavender); color: white; margin-top: 0;">
                Search
            </button>
            
            <% if (searchTerm) { %>
                <a href="/donations" style="text-decoration: none;">
                    <button type="button" class="btn btn-charcoal" style="width: auto; margin-top: 0;">
                        Clear
                    </button>
                </a>
            <% } %>
        </form>

        <!-- Donations Table -->
        <div style="margin-bottom: 2rem;">
            <% if (!donations || donations.length === 0) { %>
                <div style="background-color: #fff3cd; color: #856404; padding: 15px; border-radius: 8px; border: 1px solid #ffeeba;">
                    No donations recorded.
                </div>
            <% } else { %>
                <div style="overflow-x: auto;">
                    <table style="width: 100%; border-collapse: collapse; min-width: 600px;">
                        <thead>
                            <tr>
                                <th style="text-align: left; padding: 12px; color: var(--rose-deep); border-bottom: 2px solid var(--pink-light);">Donor</th>
                                <th style="text-align: left; padding: 12px; color: var(--rose-deep); border-bottom: 2px solid var(--pink-light);">Donation Date</th>
                                <th style="text-align: left; padding: 12px; color: var(--rose-deep); border-bottom: 2px solid var(--pink-light);">Amount</th>

                                <% if (user && user.level === 'M') { %>
                                    <th style="padding: 12px; border-bottom: 2px solid var(--pink-light); text-align: right;"></th>
                                    <th style="padding: 12px; border-bottom: 2px solid var(--pink-light); text-align: right;"></th>
                                <% } %>
                            </tr>
                        </thead>

                        <tbody>
                            <% donations.forEach(d => { %>
                                <tr style="border-bottom: 1px solid #eee;">
                                    <td style="padding: 12px; color: var(--charcoal); font-weight: 600;">
                                        <%= d.participantfirstname %> <%= d.participantlastname %>
                                    </td>

                                    <td style="padding: 12px; color: #666; font-family: monospace;">
                                        <% if (d.donationdate) { %>
                                            <%= new Date(d.donationdate).toLocaleDateString() %>
                                        <% } else { %>
                                            N/A
                                        <% } %>
                                    </td>

                                    <td style="padding: 12px; font-weight: bold; color: var(--rose-deep);">
                                        $<%= d.donationamount %>
                                    </td>

                                    <% if (user && user.level === 'M') { %>
                                        <td style="padding: 12px; text-align: right;">
                                            <a href="/editDonation/<%= d.donationid %>" style="display: inline-block; text-decoration: none; padding: 6px 12px; background-color: var(--coral); color: white; border-radius: 6px; font-weight: 600;">
                                                Edit
                                            </a>
                                        </td>

                                        <td style="padding: 12px; text-align: right;">
                                            <a href="/deleteDonation/<%= d.donationid %>" onclick="return confirm('Are you sure you want to delete this donation?');" style="display: inline-block; text-decoration: none; padding: 6px 12px; background-color: var(--rose-deep); color: white; border-radius: 6px; font-weight: 600;">
                                                Delete
                                            </a>
                                        </td>
                                    <% } %>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>

        <!-- Footer Back Button -->
        <div style="margin-top: 2.5rem; padding-top: 1.5rem; border-top: 2px solid var(--pink-light); display: flex; gap: 1rem; justify-content: flex-end; flex-wrap: wrap;">
            <a href="/" style="text-decoration: none;">
                <button type="button" style="background-color: #6c757d; color: white; padding: 10px 18px; border: none; border-radius: 8px; cursor: pointer; font-weight: bold;">
                    Back
                </button>
            </a>
        </div>

    </div>
</div>
