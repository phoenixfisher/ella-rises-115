<div class="landing">
    <!-- Using hero-panel for the white card container -->
    <div class="hero-panel" style="max-width: 1000px; margin: 0 auto;">
        
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
            <h2 style="color: var(--charcoal); margin: 0;">Users List</h2>
            
            <% if (userLevel === 'M') { %>
                <form action="/addUser" method="GET" style="margin: 0;">
                    <button type="submit" style="background-color: var(--rose-deep); color: white; padding: 10px 20px; border: none; border-radius: 8px; cursor: pointer; font-weight: bold;">
                        + Add User
                    </button>
                </form>
            <% } %>
        </div>

        <% if (typeof error_message !== 'undefined' && error_message) { %>
            <div style="background-color: #f8d7da; color: #721c24; padding: 10px; border-radius: 8px; margin-bottom: 20px; border: 1px solid #f5c6cb;">
                <%= error_message %>
            </div>
        <% } %>

        <% if (users.length === 0) { %>
            <div style="background-color: #fff3cd; color: #856404; padding: 15px; border-radius: 8px; border: 1px solid #ffeeba;">
                No users found in the database.
            </div>
        <% } else { %>
            <div style="overflow-x: auto;">
                <table style="width: 100%; border-collapse: collapse; min-width: 600px;">
                    <thead>
                        <tr>
                            <th style="text-align: left; padding: 12px; color: var(--rose-deep); border-bottom: 2px solid var(--pink-light);">Username</th>
                            <th style="text-align: left; padding: 12px; color: var(--rose-deep); border-bottom: 2px solid var(--pink-light);">Password</th> 
                            <th style="text-align: left; padding: 12px; color: var(--rose-deep); border-bottom: 2px solid var(--pink-light);">Level</th>
                            <th style="padding: 12px; border-bottom: 2px solid var(--pink-light);"></th>
                            <th style="padding: 12px; border-bottom: 2px solid var(--pink-light);"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let iCount = 0; iCount < users.length; iCount++) { %>
                            <tr style="border-bottom: 1px solid #eee;">
                                <td style="padding: 12px; color: var(--charcoal); vertical-align: bottom;"><%= users[iCount].username %></td>
                                <td style="padding: 12px; color: #666; font-family: monospace; vertical-align: bottom;"><%= users[iCount].password %></td>
                                <td style="padding: 12px; vertical-align: bottom;">
                                    <% if (users[iCount].level === 'M') { %>
                                        <span style="display: inline-block; background-color: #ccc; color: var(--charcoal); padding: 4px 8px; border-radius: 4px; font-size: 0.85rem; font-weight: bold;">Manager</span>
                                    <% } else { %>
                                        <span style="display: inline-block; background-color: #eee; color: #555; padding: 4px 8px; border-radius: 4px; font-size: 0.85rem;">User</span>
                                    <% } %>
                                </td>
                                <td style="padding: 12px; text-align: right; vertical-align: bottom;">
                                    <!-- Changed to 'a' tag for better alignment control. Visual style matches button. -->
                                    <a href="/editUser/<%= users[iCount].id %>" style="display: inline-block; text-decoration: none; padding: 6px 12px; background-color: var(--pink-light); color: var(--rose-deep); border: none; border-radius: 4px; font-size: 0.9rem; font-weight: 600; vertical-align: bottom;">Edit</a>
                                </td>
                                <td style="padding: 12px; text-align: right; vertical-align: bottom;">
                                    <!-- Added margin:0 and inline-block to form to prevent layout shifts -->
                                    <form action="/deleteUser/<%= users[iCount].id %>" method="post" onsubmit="return confirm('Are you sure you want to delete <%= users[iCount].username %>?');" style="display: inline-block; margin: 0;">
                                        <button type="submit" style="padding: 6px 12px; background-color: #dc3545; color: white; border: none; border-radius: 4px; font-size: 0.9rem; cursor: pointer; vertical-align: bottom;">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        <% } %>

        <div style="margin-top: 2rem; border-top: 2px solid var(--pink-light); padding-top: 1rem;">
            <a href="/" style="text-decoration: none;">
                <button type="button" style="background-color: #6c757d; color: white; padding: 10px 20px; border: none; border-radius: 8px; cursor: pointer;">Back to Landing Page</button>
            </a>
        </div>
    </div>
</div>